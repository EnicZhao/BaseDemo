<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bgContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_more_height">

    <FrameLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height">

        <TextView
            android:id="@+id/tvTitle"
            android:textColor="@color/white"
            android:text="标题"
            android:textSize="@dimen/font_biggest_size"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/btnBack"
            android:src="@mipmap/ic_back"
            android:paddingLeft="@dimen/padding_edge_distance"
            android:paddingRight="@dimen/padding_edge_distance"
            android:scaleType="centerInside"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/btnLeftIcon"
            android:paddingLeft="@dimen/padding_edge_distance"
            android:paddingRight="@dimen/padding_edge_distance"
            android:scaleType="centerInside"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/btnLeftText"
            android:gravity="center"
            android:textSize="@dimen/font_common_size"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/padding_edge_distance"
            android:paddingRight="@dimen/padding_edge_distance"
            app:touch_effects_type="scale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/btnRightIcon"
            android:paddingLeft="@dimen/padding_edge_distance"
            android:paddingRight="@dimen/padding_edge_distance"
            android:scaleType="centerInside"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/btnRightText"
            android:gravity="center"
            android:textSize="@dimen/font_common_size"
            app:touch_effects_type="scale"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/padding_edge_distance"
            android:paddingRight="@dimen/padding_edge_distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </FrameLayout>

</FrameLayout>