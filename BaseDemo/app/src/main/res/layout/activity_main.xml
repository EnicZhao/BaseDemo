<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.MainActivity">

    <com.project.enic.basedemo.base_module.widget.TopBarView
        app:show_back="false"
        app:title="菜单"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvPermission"
        android:background="@drawable/bg_theme_and_corner"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        app:touch_effects_type="scale"
        android:textSize="@dimen/font_common_size"
        android:gravity="center"
        android:text="测试权限" />

    <TextView
        android:id="@+id/tvList"
        android:background="@drawable/bg_border_theme_color_and_corner"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_common_size"
        app:touch_effects_type="scale"
        android:gravity="center"
        android:text="测试列表" />

    <TextView
        android:id="@+id/tvViewPager"
        android:background="@drawable/bg_theme_and_corner"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        app:touch_effects_type="scale"
        android:textSize="@dimen/font_common_size"
        android:gravity="center"
        android:text="测试ViewPager" />

    <TextView
        android:id="@+id/tvEffects"
        android:background="@drawable/bg_border_theme_color_and_corner"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_common_size"
        app:touch_effects_type="scale"
        android:gravity="center"
        android:text="测试点击效果" />

</LinearLayout>