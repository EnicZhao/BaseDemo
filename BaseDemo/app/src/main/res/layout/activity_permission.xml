<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.PermissionActivity">

    <com.project.enic.basedemo.base_module.widget.TopBarView
        app:title="权限申请"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvCamera"
        android:background="@drawable/bg_border_theme_color_and_corner"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_common_size"
        app:touch_effects_type="scale"
        android:gravity="center"
        android:text="相机" />

    <TextView
        android:id="@+id/tvStorage"
        android:background="@drawable/bg_border_theme_color_and_corner"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_common_size"
        app:touch_effects_type="scale"
        android:gravity="center"
        android:text="文件存储" />

    <TextView
        android:id="@+id/tvAudio"
        android:background="@drawable/bg_border_theme_color_and_corner"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_common_size"
        app:touch_effects_type="scale"
        android:gravity="center"
        android:text="录音" />

    <TextView
        android:id="@+id/tvPhone"
        android:background="@drawable/bg_border_theme_color_and_corner"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_common_size"
        app:touch_effects_type="scale"
        android:gravity="center"
        android:text="电话" />

    <TextView
        android:id="@+id/tvLocation"
        android:background="@drawable/bg_border_theme_color_and_corner"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_common_size"
        app:touch_effects_type="scale"
        android:gravity="center"
        android:text="定位" />


</LinearLayout>