<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".module.EffectsActivity">

    <com.project.enic.basedemo.base_module.widget.TopBarView
        app:title="点击效果展示"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/single_none_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单独禁止"
        android:padding="10dp"
        app:touch_effects_type="scale"
        android:textColor="#FF000000"/>
    <TextView
        android:id="@+id/single_scale_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单独使用缩放"
        android:padding="10dp"
        android:textColor="#FF000000"
        app:touch_effects_type="scale"/>
    <TextView
        android:id="@+id/single_ripple_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水波纹"
        android:padding="10dp"
        android:textColor="#FF000000"
        app:touch_effects_type="ripple"/>
    <TextView
        android:id="@+id/single_ripple_round_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圆角水波纹"
        android:padding="10dp"
        android:textColor="#FF000000"
        app:touch_effects_type="ripple"
        app:touch_effects_radius="10dp"/>
    <TextView
        android:id="@+id/single_ripple_color_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="颜色圆角水波纹"
        android:padding="10dp"
        android:textColor="#FF000000"
        app:touch_effects_type="ripple"
        app:touch_effects_pressed_color="#803E7BAF"
        app:touch_effects_normal_color="#809D81FC"
        app:touch_effects_radius="10dp"/>
    <TextView
        android:id="@+id/single_ripple_1_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水波纹1"
        android:padding="10dp"
        android:textColor="#FF000000"
        app:touch_effects_type="ripple_1"/>
    <TextView
        android:id="@+id/single_ripple_round_1_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圆角水波纹1"
        android:padding="10dp"
        android:textColor="#FF000000"
        app:touch_effects_type="ripple_1"
        app:touch_effects_radius="10dp"/>
    <TextView
        android:id="@+id/single_ripple_color_1_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="颜色圆角水波纹1"
        android:padding="10dp"
        android:textColor="#FF000000"
        app:touch_effects_type="ripple_1"
        app:touch_effects_pressed_color="#803E7BAF"
        app:touch_effects_normal_color="#809D81FC"
        app:touch_effects_radius="10dp"/>
    <TextView
        android:id="@+id/single_state_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="渐变"
        android:padding="10dp"
        android:textColor="#FF000000"
        app:touch_effects_type="state"/>
    <TextView
        android:id="@+id/single_state_round_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圆角渐变"
        android:padding="10dp"
        android:textColor="#FF000000"
        app:touch_effects_type="state"
        app:touch_effects_radius="10dp"/>
    <TextView
        android:id="@+id/single_state_color_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="颜色圆角渐变"
        android:padding="10dp"
        android:textColor="#FF000000"
        app:touch_effects_type="state"
        app:touch_effects_pressed_color="#803E7BAF"
        app:touch_effects_normal_color="#809D81FC"
        app:touch_effects_radius="10dp"/>
    <TextView
        android:id="@+id/single_shake_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击抖动"
        android:padding="10dp"
        android:textColor="#FF000000"
        app:touch_effects_type="shake"/>

</LinearLayout>